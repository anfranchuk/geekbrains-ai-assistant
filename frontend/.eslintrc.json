{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/prop-types": "off", 
        "react/display-name": "off",
        
        "indent": ["error", "tab", {
            "ignoredNodes": ["TemplateLiteral"]
        }],
        "linebreak-style": [
            "warn",
            "unix"
            // "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "template-curly-spacing" : "off",
        "no-unused-vars": "warn",
        "no-debugger": "warn",
        "react/react-in-jsx-scope": "off",
        "no-tabs": "off",
        "react/jsx-props-no-spreading": "off"
    }
}